@using CarGalery.Entities.Concrete
@model List<Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Book List</h1>

    <div class="row">
        <div class="col-lg-12">
            @foreach (var item in Model)
            {

                <div class="card mt-5" style="display:inline-block; min-width:100%">
                    <div class="card-header">
                        <h3>@item.Model</h3>
                    </div>
                    <div class="card-body">
                       @item.CarId
                    </div>
                    <div class="card-footer">
                        @item.Price
                    </div>
                </div>
            }
        </div>
    </div>
</div>
